<h1>Post List</h1>
<%= link_to 'Add new Post', new_post_path, class: 'btn btn-success' %>

<table>
  <thead>
  <tr>
    <td>TITLE</td>
    <td>CONTENT</td>
    <td>CREATED AT</td>
    <td>UPDATED AT</td>
    <td>ACTIONS</td>
  </tr>
  </thead>
  <tbody>
  <% @posts.each do |post| %>
    <tr>
      <td><%= post.title %></td>
      <td><%= post.content %></td>
      <td><%= post.created_at %></td>
      <td><%= post.updated_at %></td>
      <td>
        <%= link_to 'Show', post_path(post), class: 'btn btn-primary' %>
        <%= link_to 'Edit', edit_post_path(post), class: 'btn btn-warning' %>
        <%= button_to 'Delete', post_path(post), method: :delete, class: 'btn btn-danger' %>
      </td>
    </tr>
  <% end %>
  </tbody>
</table>
